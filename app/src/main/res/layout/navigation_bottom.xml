<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="190px"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorlinedarker_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150px"
            android:layout_gravity="bottom"
            android:layout_marginTop="25px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/tab1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="6px"
                    android:src="@mipmap/ic_zichang"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_tab1"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="6px"
                    android:src="@mipmap/ic_zichang_pre"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="18px"
                    android:text="首页"
                    android:textSize="30px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="18px"
                    android:text="首页"
                    android:textSize="30px"
                    android:textColor="@color/main_blue_light"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab5"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="6px"
                    android:src="@mipmap/ic_wifi"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_tab5"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="6px"
                    android:src="@mipmap/ic_wifi_press"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_tab5_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="18px"
                    android:text="未连接"
                    android:textSize="30px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tab5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="18px"
                    android:text="未连接"
                    android:textColor="@color/main_blue_light"
                    android:textSize="30px"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab6"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="6px"
                    android:src="@mipmap/ic_wode"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_tab6"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="6px"
                    android:src="@mipmap/ic_wode_pre"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="18px"
                    android:text="个人"
                    android:textSize="30px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tab6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="18px"
                    android:text="个人"
                    android:textColor="@color/main_blue_light"
                    android:textSize="30px"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>