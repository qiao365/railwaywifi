<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.ReceivablesCodeActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="104px"
        android:layout_height="104px"
        android:onClick="onClick"
        android:padding="25px"
        android:src="@drawable/ic_clear_white_48dp" />


    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="收款码"
        android:textSize="42px"
        android:layout_marginTop="40px"
        android:textColor="@android:color/white"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="320px"
        android:background="@mipmap/ic_defailt"
        android:layout_width="160px"
        android:layout_centerHorizontal="true"
        android:layout_height="160px" />

    <ScrollView
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvCode"
                android:layout_margin="100px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0x91654eaf7828e7e05d2847aa27405d9925c3dc0d"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:background="@color/blue"
                />

            <ImageView
                android:id="@+id/imgcode"
                android:background="@mipmap/ic_launcher"
                android:layout_width="620px"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_height="620px" />

            <Button
                android:id="@+id/fuzhi"
                android:onClick="onClick"
                android:layout_width="640px"
                android:layout_height="wrap_content"
                android:text="复制收款地址"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
